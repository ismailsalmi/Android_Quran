<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:text="قم بتشغيل الأنترنت"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/button_wifi"
        android:drawableRight="@drawable/ic_wifi_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="واي فاي" />

    <Button
        android:id="@+id/button_card_sim"
        android:drawableRight="@drawable/ic_sim_card_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="شبكة الجوال" />
</LinearLayout>

</LinearLayout>